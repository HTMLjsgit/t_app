<div class="main posts-show">
  <!-- 報告機能部分  -->
  <i class="fa-sharp fa-solid fa-circle-exclamation report-show-button"></i>
  <div class="modal-contents hide" id="report-modal-contents">
    <i class="zoom-hide-button fa fa-times-circle modal-hide-button"></i>
    <div class="report-form">
      <%= render "report_form" %>
    </div>
  </div>
  <div class="modal-background hide" id="report-modal-background">

  </div>
  <div class="posts-show-item">
    <%#= render partial: "users/user_profile", locals: {user: @user} %>
    <div class="post-show-images-posts-slides-box">
      <div class="post-show-image_posts-all-box">

        <% @post.image_posts.each do |image_post| %>
          <% if image_post.picture? %>
            <div class="post-show-image_post-box">
              <%= image_tag image_post.picture.url,class: "post-show-image_post" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<style>
  .container{
    max-width: none;
  }
</style>
<script>
  $(".post-show-image_posts-all-box").slick({
    slidesToShow: 1,
    slidesToScroll: 1,
    dots: true,
    lazyLoad: 'progressive'
  });
  $(".report-show-button").click(function(event){
    $("#report-modal-contents").removeClass("hide");
    $("#report-modal-background").removeClass("hide");
    modal_opended = true;
  });

</script>
