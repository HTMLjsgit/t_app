<div class="main posts-index">
  <div class="container">

    <div style="width:100%;height:500px;overflow:auto;">



      <% @reals.each do |real| %>
      <div class="reals-index-item">
        <% if real.user.avater.attached? %>
          <div class="real-users">
            <%= image_tag real.user.avater %>  <%= link_to(real.user.username, "/reals/#{real.id}",class: "real-index-name") %>
          </div>
        <% else %>
        <div class="real-users">
        <%= image_tag "/blank-profile-picture-973460_640.png" %><%= link_to(real.user.username, "/reals/#{real.id}",class: "real-index-name") %>
         </div>
        <% end %>
        <%= link_to(real.content,"reals/#{real.id}",class: "real-index-content") %>

      <p>
        <i class="far fa-comment fa-lg comment-show"></i>
        <%= real.real_comments.count %>

        <i class="far fa-heart like-btn"></i>
        <%= real.real_likes.count %>
      </p>
      </div>


      <% end %>
  </div>
 </div>
</div>
<%= link_to new_real_path, {class: "post_pen", method: :get} do %>
<span class="fa-stack post_pen">
<i class="fas fa-circle fa-stack-2x"style="color:pink"></i>
<i class="fas fa-plus fa-stack-1x"style="color:white"></i>
</span>
<% end %>
